{% extends '@TwinElementsAdmin/core/list.html.twig' %}

{% block title %}{{ "post_category.post_categories"|translate_admin }}{% endblock %}

{% block buttons %}
    {% set link = path('post_category_new') %}
    {{ block('add_action_link') }}
{% endblock %}

{% block list %}
    {{ block('list_ul_begin') }}
    {{ block('list_li_header_begin') }}
    {{ block('id_header') }}
    <div class="col">{{ "post_category.title"|translate_admin }}</div>
    {{ block('list_li_header_end') }}

    {% for post_category in post_categories %}
        {% set id = post_category.id %}

        {{ block('list_li_begin') }}
        {{ block('id') }}
        <div class="col">
            <div class="title">
                <a href="{{ path('post_category_edit', {'id': post_category.id}) }}">
                    <span>{{ post_category.title }}</span>
                </a>
            </div>
        </div>
        <div class="flex-grow-1"></div>
        <a href="{{ path('post_index', {'category': post_category.id}) }}"
           class="btn btn-primary btn-sm">{{ "post_category.go_to_posts"|translate_admin }}</a>
        {{ block('list_li_end') }}
    {% else %}
        {{ block('no_elements') }}
    {% endfor %}
    {{ block('list_ul_end') }}

{% endblock %}

